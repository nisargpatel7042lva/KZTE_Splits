# App Configuration
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/kzte_splits

# JWT Authentication
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS SNS (for OTP)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_SNS_SENDER_ID=KZTE

# Solana Blockchain
SOLANA_RPC_URL=https://api.devnet.solana.com
KZTE_TOKEN_MINT_ADDRESS=your-token-mint-address-from-intebix
WALLET_ENCRYPTION_KEY=your-256-bit-wallet-encryption-key
GAS_PAYER_PRIVATE_KEY=optional-for-sponsored-transactions

# File Upload (optional - Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
